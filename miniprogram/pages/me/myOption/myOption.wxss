/* pages/option/option.wxss */

.body {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-bottom: 160rpx;
}

.body .title {
    display: flex;
    align-items: center;
    height: 120rpx;
    width: 100%;
    background: #fff;
    box-sizing: border-box;
    padding-left: 20rpx;
    margin-bottom: 50rpx;
}

.body .title image {
    height: 36rpx;
    width: 36rpx;
}

.body .title text {
    font-size: 36rpx;
    color: #66CDAA;
    font-weight: bold;
    margin-left: 6rpx;
}

.list {
    width: 100%;
    display: flex;
    flex-direction: column;
    height: 850rpx;
}

.list .item {
    display: flex;
    align-items: center;
    height: 100rpx;
    background: #fff;
    box-sizing: border-box;
    padding: 0 20rpx;
    justify-content: space-between;
}

.list .item .left {
    display: flex;
    height: 100rpx;
    width: 500rpx;
    align-items: center;
}

.list .item image {
    width: 80rpx;
    height: 80rpx;
}

.list .item .index {
    height: 60rpx;
    width: 60rpx;
    border-radius: 50%;
    background: #66CDAA;
    display: flex;
    justify-content: center;
    align-items: center;
}

.list .item .index text {
    color: #fff;
    font-weight: bold;
    font-size: 24rpx;
}

.list .item .content {
    margin-left: 20rpx;
    flex: 1;
    height: 100%;
    display: flex;
    align-items: center;
}

.list .item .content text {
    font-size: 30rpx;
}

.noOption {
    margin: 100rpx auto;
    color: #cdcdcd;
    font-weight: bold;
    font-size: 40rpx;
}

.tail {
    width: 100%;
    height: 120rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff;
}

.tail button {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 46%;
    height: 90rpx;
    background: #66CDAA;
}

.tail button image {
    width: 36rpx;
    height: 36rpx;
}

.tail button text {
    font-size: 36rpx;
    margin-left: 20rpx;
}