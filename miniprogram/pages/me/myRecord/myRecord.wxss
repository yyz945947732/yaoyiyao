/* pages/me/myRecord/myRecord.wxss */

.body {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.body .title {
    display: flex;
    align-items: center;
    height: 120rpx;
    width: 100%;
    background: #fff;
    box-sizing: border-box;
    padding: 0 50rpx 0 20rpx;
    margin-bottom: 50rpx;
    justify-content: space-between;
}

.body .title .left {
    height: 100%;
    display: flex;
    align-items: center;
}

.body .title image {
    height: 36rpx;
    width: 36rpx;
}

.body .title text {
    font-size: 36rpx;
    color: #66CDAA;
    font-weight: bold;
    margin-left: 6rpx;
}

.body .title .remove {
    color: #F56C6C;
    font-size: 24rpx;
    font-weight: normal;
}

.body .list {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-bottom: 50rpx;
}

.body .list .item {
    height: 200rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-bottom: 50rpx;
    background: #fff;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.body .list .item .date {
    display: flex;
    align-items: center;
    height: 80rpx;
    border-bottom: 1px solid #f7f7f7;
}

.body .list .item .date text {
    color: #8a8a8a;
    font-size: 26rpx;
    margin-left: 8rpx;
}

.body .list .item .date image {
    height: 36rpx;
    width: 36rpx;
}

.body .list .item .content {
    display: flex;
    align-items: center;
    flex: 1;
    color: #909399;
    font-size: 32rpx;
    letter-spacing: 2rpx;
    padding:0 38rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

.body .list .item image{
    height:120rpx;
    width:120rpx;
}

.body .list .item .num {
    color: #F56C6C;
    font-weight: bold;
}

.body .list .item .choosed {
    color: #66CDAA;
    font-weight: bold;
}

.noRecord {
    margin: 100rpx auto;
    color: #cdcdcd;
    font-weight: bold;
    font-size: 40rpx;
}

.loadOver {
    margin: 0 auto;
    color: #cdcdcd;
    font-size: 36rpx;
}