/* pages/me/me.wxss */

.head {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 360rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.head .headBox {
    width: 200rpx;
    height: 220rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.head .headBox image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.head .headBox text {
    font-size: 26rpx;
}

.bodyItem {
    width: 100%;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    height: 100rpx;
    background-color: white;
}

.bodyItem image {
    height: 36rpx;
    width: 36rpx;
    margin: auto 20rpx;
    margin-left: 0rpx;
}

.bodyItem text {
    font-size: 26rpx;
    margin: auto 0;
    display: inline-flex;
    width: 96%;
}

.right {
    margin-right: 0rpx;
}

.bodyList {
    width: 100%;
    box-sizing: border-box;
    padding: 0 0 0 20rpx;
    background-color: white;
    border-bottom: 1px solid #e5e5e5;
    margin-top: 50rpx;
}

.bodyList button {
    padding: 0;
}

.bodyList button::after {
    border: none;
}

.noBorder {
    border: none;
}

.version {
    display: flex;
    width: 100%;
    height: 80rpx;
    justify-content: center;
    align-items: center;
}

.version text {
    color: #cdcdcd;
    font-size: 26rpx;
}