<scroll-view class="body" scroll-y="true" upper-threshold="50" lower-threshold="50" scroll-top="0" wx:if="{{!runMode}}">
  <view class="title" hover-class="none" hover-stop-propagation="false">
    <text selectable="false" space="false" decode="false">我的选项</text>
  </view>
  <view class="list" hover-class="none" hover-stop-propagation="false">
    <view class="item" hover-class="none" hover-stop-propagation="false" wx:for="{{options}}" wx:key="{{item}}">
      <text selectable="false" space="false" decode="false">{{item}}</text>
    </view>
  </view>
</scroll-view>
<view class="body" hover-class="none" hover-stop-propagation="false" wx:if="{{runMode}}">
  <view class="num" hover-class="none" hover-stop-propagation="false">
    <text selectable="false" space="false" decode="false">{{num}}</text>
  </view>
  <view class="answer" hover-class="none" hover-stop-propagation="false">
    <text selectable="false" space="false" decode="false">{{options[answer]}}</text>
  </view>
</view>
<button class="run" size="default" bindtap="run">
  <text selectable="false" space="false" decode="false">摇起来</text>
</button>